@page
@*@model RegisterModel*@
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" integrity="sha384-tKLJeE1ALTUwtXlaGjJYM3sejfssWdAaWR2s97axw4xkiAdMzQjtOjgcyw0Y50KU" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" />
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<body style="background: rgba(0,0,0,0.7)url('https://media.istockphoto.com/photos/varied-food-carbohydrates-protein-vegetables-fruits-dairy-legumes-on-picture-id1218254547?b=1&k=20&m=1218254547&s=170667a&w=0&h=mOEC7x7qU5NC78mCULs-jAPeLkxy8opOvIbGSnwmAyw='); background-blend-mode: darken; background-repeat: no-repeat; position: relative; background-position: center; background-size: cover; height: 1720px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="text-align: center">
                            <a class="nav-link text-danger font-weight-bold h5 text-center" asp-area="" asp-controller="Home" asp-action="Index" id="Logo">Dhaka Choice Ltd.</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container card border-bottom-primary shadow-lg p-3 mb-5 bg-body rounded-3 w-25 p-3">



        <form class="row g-3 needs-validation" novalidate enctype="multipart/form-data" method="post" action="@Url.Action("Save","Home")">
            <div class="col-md-12">
                <h3>
                    Employee Form
                </h3>
            </div>
            <div class="col-md-12">
                <label>Image</label><br />
                <div class="btn btn-primary">
                    <input type="file" id="UploadImage" name="UploadImage" required />
                </div>
                <hr />

                <div id="imgPreview" class="thumbnail" style="display:none">
                    <img class="img-responsive" id="targetImg" style="height:80px; width:100px" />
                    <div class="caption">
                        <a href="#" onclick="ClearPreview()"><i class="glyphicon glyphicon-trash"></i></a>
                        <span id="description"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">aa
                <label for="validationCustom01" class="form-label">First Name</label>
                <input type="text" class="form-control h-25 p-3" id="fname" name="FirstName" placeholder="First name..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your first name.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Last Name</label>
                <input type="text" class="form-control h-25 p-3" id="lname" name="LastName" placeholder="Last name..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your last name.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Father Name</label>
                <input type="text" class="form-control h-25 p-3" id="fathername" name="FatherName" placeholder="Father name..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your father name.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Email</label>
                <input type="email" class="form-control h-25 p-3" id="email" name="Email" placeholder="Email..." required />

                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your Email.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Phone Number</label>
                <input type="number" class="form-control h-25 p-3" id="phonenumber" name="Phonenumber" placeholder="Phone number..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your Phone number.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">NID Number</label>
                <input type="number" class="form-control h-25 p-3" id="nidnumber" name="NIDnumber" placeholder="NID number..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your NID number.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom03" class="form-label">Address</label>
                <input type="text" class="form-control h-25 p-3" id="address" name="Address" placeholder="Address..." required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter you Address.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom04" class="form-label">Marital status</label>
                <select class="form-control h-26 p-0" id="maritalstatus" name="Maritalstatus" required>
                    <option selected disabled value="">--Select--</option>
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                    <option value="Divorced">Divorced</option>
                    <option value="Widowed">Widowed</option>
                    <option value="Separated">Separated</option>
                </select>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please select your marital status.
                </div>
            </div>

            <div class="col-md-12">
                <label for="validationCustom04" class="form-label">Religion</label>
                <select class="form-control h-26 p-0" id="religion" name="Religion" required>
                    <option selected disabled value="">--Select--</option>
                    <option value="Islam">Islam</option>
                    <option value="Christianity">Christianity</option>
                    <option value="Hinduism">Hinduism</option>
                    <option value="Buddhism ">Buddhism </option>
                    <option value="Separated">Judaism</option>
                </select>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please select your Religion.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom03" class="form-label">Gender</label><br>
                <input type="radio" name="Gender" value="Male" checked style="font-size: 20px" required> Male<br>
                <input type="radio" name="Gender" value="Female" style="font-size: 20px" required> Female
            </div>
            <div class="col-md-12">
                <label for="validationCustom05" class="form-label">Date of Birth</label>
                <input type="date" class="form-control h-25 p-3" id="dateofbirth" name="Dateofbirth" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid Date of Birth.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom05" class="form-label">Joining Date</label>
                <input type="date" class="form-control h-25 p-3" name="JoiningDate" id="joiningdate" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide Joining Date.
                </div>
            </div>
            <div class="col-md-12">
                <label for="Status" class="form-label">Status</label>
                <select class="form-control h-15 p-1" name="Status" id="status" required>
                    <option selected disabled value="">--Select--</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please select Status.
                </div>
            </div>
            <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Salary</label>
                <input type="number" class="form-control h-25 p-3" id="salary" name="Salary" placeholder="Salary..." required />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your Salary.
                </div>
            </div>
            <div class="col-md-12">
                <label class="form-label">Company Name</label>
                <select class="form-control h-26 p-0" name="CompanyId" id="companyId" required></select>
            </div>
            <div class="col-md-12">
                <label class="form-label">Department Name</label>
                <select class="form-control h-15 p-1" name="DepartmentId" id="departmentId" required>
                    <option selected disabled value="">Select company then auto fill department</option>
                </select>
            </div>
            <div class="col-md-12">
                <label class="form-label">Designation Name</label>
                <select class="form-control h-15 p-1" name="DesignationId" id="designationId" required>
                    <option selected disabled value="">Select company and department then auto fill designation</option>
                </select>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Add Employee</button>
            </div>
        </form>
    </div>
</body>

